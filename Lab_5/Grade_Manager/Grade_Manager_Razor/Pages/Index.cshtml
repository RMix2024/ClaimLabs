@page 
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Grade_Manager_Razor.Models
@using Grade_Manager_Razor.Data
@{
    ViewData["Title"] = "Main Menu";
}

<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <table class="table table-striped classroom">
        <thead>
            <tr>
                <th>ClassRooms</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classRoom in Model.ClassRooms)
            {
                <tr>
                    <td class="align-middle">@classRoom.Name</td>
                    <td><a asp-page="ClassRooms/ClassroomDetailsMenu" asp-route-id="@classRoom.ClassRoomId" class="btn btn-success">ClassRoom Details Menu</a></td>
                    <td><a asp-page="Students/AddStudent" asp-route-id="@classRoom.ClassRoomId" class="btn btn-success">Add new Student</a></td>
                    <td><a asp-page="ClassRooms/DeleteClassRoom" asp-route-id="@classRoom.ClassRoomId"  class="btn btn-danger">Remove</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-page="ClassRooms/AddClassroom" class="btn btn-success">Add new Classroom</a>

