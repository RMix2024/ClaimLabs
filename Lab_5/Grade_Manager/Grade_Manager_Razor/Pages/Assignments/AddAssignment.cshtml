@page "{StudentId}"
@model Grade_Manager_Razor.Pages.Assignments.AddAssignmentModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Grade_Manager_Razor.Models
@using Grade_Manager_Razor.Data
@{
    ViewData["Title"] = "AddAssignment";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-page-handler="Submit">
        <label>Assignment Name:</label>
        <input type="text" value="Assignment to Add" asp-for="@Model.Input.Name">
        <input asp-for="@Model.studentid" type="hidden" />
        <input type="submit" value="Submit" class="text-success">
        <span asp-validation-for="@Model.Input.Name" class="text-danger"></span>
    </form>
</div>

<a asp-page="/Students/StudentDetailsMenu" asp-route-StudentId="@Model.student.StudentId" class="btn btn-success">Back to last Menu</a>
