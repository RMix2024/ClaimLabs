@page "{AssignmentId}"
@model Grade_Manager_Razor.Pages.Assignments.GradeAssignmentModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Grade_Manager_Razor.Models
@using Grade_Manager_Razor.Data
@{
    ViewData["Title"] = "Grade Assignment";
}

<h1>@ViewData["Title"]</h1>
<h3>@Model.Assignment.Name</h3>
<div class="table-responsive">
    <table class="table table-striped assignment">
        <thead>
            <tr>
                <th>Grade this assignment</th>
                <th>Grade</th>
                <th>Is Complete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Assignment.Name
                </td>
                <td>
                    @Model.Assignment.Grade
                </td>
                <td>
                    @Model.Assignment.IsComplete
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <form method="post" asp-page-handler="Submit">
        <label>Assignment Grade:</label>
        <input type="text" asp-for="@Model.Assignment.Grade">
        <label>Is Complete:</label>
        <input type="checkbox" asp-for="@Model.Assignment.IsComplete">
        <input type="hidden" asp-for="@Model.Assignment.AssignmentId">
        <input type="hidden" asp-for="@Model.Assignment.StudentId">
        <input type="hidden" asp-for="@Model.Assignment.Name">
        <input type="submit" value="Submit" class="text-success">        
    </form>
</div>

