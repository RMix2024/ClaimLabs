@page "{id?}"
@model Grade_Manager_Razor.Pages.ClassRooms.DeleteClassRoomModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Grade_Manager_Razor.Models
@using Grade_Manager_Razor.Data

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>



<h3>Are you sure you want to delete this?</h3>


<div class="table-responsive">
    <table class="table table-striped classroom">
        <thead>
            <tr>
                <th>ClassRoom</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.classRoom.Name
                </td>
            </tr>
        </tbody>
    </table>
</div>


<div>
    <form method="post" asp-page-handler="Delete">
        <input type="hidden" asp-for="@Model.classRoom.ClassRoomId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="../Index" class="btn btn-success">Main Menu</a>
    </form>
</div>